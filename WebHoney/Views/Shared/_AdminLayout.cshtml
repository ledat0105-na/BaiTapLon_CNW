<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    
    <!-- Bootstrap CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/assets/css/fontawesome.css" />
    
    <!-- Admin Layout CSS -->
    <link rel="stylesheet" href="~/assets/css/admin-layout.css" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <div style="display: flex; align-items: center; justify-content: flex-start; gap: 15px; margin-bottom: 10px; padding: 0 10px;">
                <img src="/assets/images/logoKTDN.png" alt="Logo" style="height: 50px; width: auto; object-fit: contain; flex-shrink: 0;">
                <div style="flex: 1;">
                    <h4 style="margin: 0; text-align: left;">
                        <span>Admin Panel</span>
                    </h4>
                    <small style="color: rgba(255,255,255,0.7); font-size: 11px; margin-top: 3px; display: block; text-align: left;">Quản trị hệ thống</small>
                </div>
            </div>
        </div>
        
        <ul class="sidebar-menu">
            <li>
                <a asp-controller="Admin" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="fa fa-dashboard"></i> Dashboard
                </a>
            </li>
            <li>
                <a asp-controller="Banner" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Banner" ? "active" : "")">
                    <i class="fa fa-image"></i> Quản lý banner
                </a>
            </li>
            <li>
                <a asp-controller="FeaturedProduct" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "FeaturedProduct" ? "active" : "")">
                    <i class="fa fa-star"></i> Sản phẩm nổi bật
                </a>
            </li>
            <li>
                <a asp-controller="HomePageSettings" asp-action="Edit" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "HomePageSettings" ? "active" : "")">
                    <i class="fa fa-cog"></i> Cài đặt trang chủ
                </a>
            </li>
            <li>
                <a asp-controller="ContactMessage" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "ContactMessage" ? "active" : "")">
                    <i class="fa fa-envelope"></i> Tin nhắn liên hệ
                </a>
            </li>
            <li>
                <a asp-controller="Product" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Product" ? "active" : "")">
                    <i class="fa fa-box"></i> Quản lý sản phẩm
                </a>
            </li>
            <li>
                <a asp-controller="Category" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Category" ? "active" : "")">
                    <i class="fa fa-folder"></i> Quản lý danh mục
                </a>
            </li>
            <li>
                <a asp-controller="Order" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Order" ? "active" : "")">
                    <i class="fa fa-shopping-cart"></i> Quản lý đơn hàng
                </a>
            </li>
            <li>
                <a asp-controller="Customer" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customer" ? "active" : "")">
                    <i class="fa fa-users"></i> Quản lý khách hàng
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="Reports" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Reports" ? "active" : "")">
                    <i class="fa fa-chart-line"></i> Báo cáo thống kê
                </a>
            </li>
            <li style="border-top: 1px solid rgba(255,255,255,0.1); margin-top: 20px;">
                <a asp-controller="Account" asp-action="Logout">
                    <i class="fa fa-sign-out"></i> Đăng xuất
                </a>
            </li>
        </ul>
    </div>
    
    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Navbar -->
        <div class="top-navbar">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@ViewData["Title"]</h5>
                <div class="d-flex align-items-center gap-3">
                    <!-- Notifications -->
                    <div class="dropdown">
                        <div class="notification-bell" data-bs-toggle="dropdown" aria-expanded="false" style="cursor: pointer; position: relative;">
                            <i class="fa fa-bell" style="font-size: 20px; color: #2c3e50;"></i>
                            <span class="notification-badge" id="notificationBadge" style="display: none;">0</span>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end notification-dropdown" style="margin-top: 10px; min-width: 350px; max-height: 500px; overflow-y: auto;">
                            <li class="dropdown-header d-flex justify-content-between align-items-center">
                                <span><strong>Thông báo</strong></span>
                                <button type="button" class="btn btn-sm btn-link p-0" id="markAllReadBtn" style="font-size: 12px;">Đánh dấu tất cả đã đọc</button>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li id="notificationList">
                                <div class="text-center p-3 text-muted">
                                    <i class="fa fa-spinner fa-spin"></i> Đang tải...
                                </div>
                            </li>
                        </ul>
                    </div>
                    
                    <!-- User Info -->
                    <div class="dropdown">
                        <div class="user-info" data-bs-toggle="dropdown" aria-expanded="false" style="cursor: pointer;">
                            <i class="fa fa-user-circle"></i>
                            <span><strong>@Context.Session.GetString("FullName")</strong></span>
                            <span class="text-muted">(@Context.Session.GetString("Email"))</span>
                            <i class="fa fa-chevron-down ms-2" style="font-size: 12px;"></i>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end" style="margin-top: 10px; min-width: 200px;">
                            <li>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="ChangePassword">
                                    <i class="fa fa-key me-2"></i> Đổi mật khẩu
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                    <i class="fa fa-sign-out me-2"></i> Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Page Content -->
        <div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @RenderBody()
        </div>
    </div>
    
    <!-- Scripts -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    
    <!-- Auto-hide alerts after 2 seconds -->
    <script>
        $(document).ready(function() {
            $('.alert').each(function() {
                var $alert = $(this);
                setTimeout(function() {
                    $alert.fadeOut(300, function() {
                        $alert.remove();
                    });
                }, 2000);
            });

            // Load notifications
            loadNotifications();
            loadUnreadCount();

            // Refresh notifications every 30 seconds
            setInterval(function() {
                loadUnreadCount();
            }, 30000);
        });

        function loadUnreadCount() {
            $.get('@Url.Action("GetUnreadCount", "Notification")', function(data) {
                var badge = $('#notificationBadge');
                if (data.count > 0) {
                    badge.text(data.count > 99 ? '99+' : data.count).show();
                } else {
                    badge.hide();
                }
            });
        }

        function loadNotifications() {
            $.get('@Url.Action("GetNotifications", "Notification")', { limit: 10 }, function(data) {
                var list = $('#notificationList');
                if (data.notifications.length === 0) {
                    list.html('<div class="text-center p-3 text-muted"><i class="fa fa-bell-slash"></i><br>Không có thông báo</div>');
                    return;
                }

                var html = '';
                data.notifications.forEach(function(notif) {
                    var icon = 'fa-info-circle';
                    var bgClass = 'bg-info';
                    if (notif.type === 'SUCCESS') {
                        icon = 'fa-check-circle';
                        bgClass = 'bg-success';
                    } else if (notif.type === 'ERROR') {
                        icon = 'fa-exclamation-circle';
                        bgClass = 'bg-danger';
                    } else if (notif.type === 'WARNING') {
                        icon = 'fa-exclamation-triangle';
                        bgClass = 'bg-warning';
                    }

                    var readClass = notif.isRead ? '' : 'notification-unread';
                    var link = '';
                    if (notif.relatedType === 'ORDER' && notif.relatedId) {
                        link = '@Url.Action("Details", "Order")?id=' + notif.relatedId;
                    }

                    html += '<li class="notification-item ' + readClass + '">';
                    html += '<a href="' + (link || '#') + '" class="dropdown-item notification-link" data-id="' + notif.id + '">';
                    html += '<div class="d-flex align-items-start">';
                    html += '<div class="notification-icon ' + bgClass + ' me-2"><i class="fa ' + icon + '"></i></div>';
                    html += '<div class="flex-grow-1">';
                    html += '<div class="fw-bold">' + notif.title + '</div>';
                    if (notif.message) {
                        html += '<div class="small text-muted">' + notif.message + '</div>';
                    }
                    html += '<div class="small text-muted mt-1">' + notif.createdAt + '</div>';
                    html += '</div>';
                    html += '</div>';
                    html += '</a>';
                    html += '</li>';
                });
                list.html(html);

                // Mark as read when clicked
                $('.notification-link').on('click', function(e) {
                    var notifId = $(this).data('id');
                    if (notifId && !$(this).closest('.notification-item').hasClass('notification-read')) {
                        $.post('@Url.Action("MarkAsRead", "Notification")', { id: notifId, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() });
                        $(this).closest('.notification-item').removeClass('notification-unread').addClass('notification-read');
                        loadUnreadCount();
                    }
                });
            });
        }

        $('#markAllReadBtn').on('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            $.post('@Url.Action("MarkAllAsRead", "Notification")', { __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() }, function(data) {
                if (data.success) {
                    $('.notification-item').removeClass('notification-unread').addClass('notification-read');
                    $('#notificationBadge').hide();
                }
            });
        });
    </script>

    @Html.AntiForgeryToken()
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

