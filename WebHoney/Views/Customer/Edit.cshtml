@model WebHoney.Models.Customer
@{
    ViewData["Title"] = "Chỉnh sửa khách hàng";
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="breadcrumb"><a asp-action="Index">Khách hàng</a> / Chỉnh sửa</span>
                <h3>Chỉnh sửa thông tin khách hàng</h3>
            </div>
        </div>
    </div>
</div>

<div class="contact-page section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="section-heading">
                    <h6>| Thông tin khách hàng</h6>
                    <h2>Cập nhật thông tin khách hàng #@Model.CustomerId</h2>
                </div>

                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CustomerId" />
                    <input type="hidden" asp-for="CreatedAt" />

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên khách hàng" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Địa chỉ</label>
                        <div class="row g-2">
                            <div class="col-12">
                                <label class="form-label small">Số nhà, tên đường</label>
                                <input type="text" id="Street" class="form-control" placeholder="Ví dụ: 123 Đường ABC" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label small">Tỉnh/Thành phố</label>
                                <select id="ProvinceCode" class="form-select">
                                    <option value="">-- Chọn tỉnh/thành phố --</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label small">Quận/Huyện</label>
                                <select id="DistrictCode" class="form-select" disabled>
                                    <option value="">-- Chọn quận/huyện --</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label small">Phường/Xã</label>
                                <select id="WardCode" class="form-select" disabled>
                                    <option value="">-- Chọn phường/xã --</option>
                                </select>
                            </div>
                        </div>
                        <input type="hidden" asp-for="Address" id="Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <small class="text-muted">Ngày tạo: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save"></i> Cập nhật thông tin
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Hủy
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.CustomerId" class="btn btn-info">
                            <i class="fas fa-eye"></i> Xem chi tiết
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/address-selector.js"></script>
    <script>
        // Khôi phục địa chỉ hiện có nếu có
        document.addEventListener('DOMContentLoaded', function() {
            var currentAddress = '@Html.Raw(Model.Address ?? "")';
            if (currentAddress) {
                // Hiển thị địa chỉ hiện tại trong trường Street để người dùng có thể chỉnh sửa
                var streetInput = document.getElementById('Street');
                if (streetInput) {
                    streetInput.value = currentAddress;
                }
                // Lưu địa chỉ hiện tại vào trường Address ẩn
                document.getElementById('Address').value = currentAddress;
            }
        });
    </script>
}

