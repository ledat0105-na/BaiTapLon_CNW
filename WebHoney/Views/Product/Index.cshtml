@model IEnumerable<WebHoney.Models.Product>
@{
    var currentPage = (int)(ViewData["CurrentPage"] ?? 1);
    var totalPages = (int)(ViewData["TotalPages"] ?? 1);
    var totalItems = (int)(ViewData["TotalItems"] ?? 0);
    var pageSize = (int)(ViewData["PageSize"] ?? 5);
    var searchString = ViewData["SearchString"] as string;
    var categoryFilter = ViewData["CategoryFilter"] as string;
}
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Quản lý sản phẩm</h4>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i> Thêm sản phẩm mới
        </a>
    </div>

    <!-- Bộ lọc -->
    <div class="card mb-3">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm theo tên sản phẩm..." value="@ViewData["SearchString"]" />
                </div>
                <div class="col-md-3">
                    <select name="categoryFilter" class="form-select" asp-items="ViewBag.Categories">
                        <option value="">Tất cả danh mục</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-search"></i> Tìm kiếm
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Xóa bộ lọc</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Danh sách sản phẩm -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Mã SP</th>
                            <th>Tên sản phẩm</th>
                            <th>Danh mục</th>
                            <th>Giá</th>
                            <th>Tồn kho</th>
                            <th>Trạng thái</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(!item.IsActive ? "table-secondary" : "")">
                                <td>@item.ProductId</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.Name" class="me-2" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;" onerror="this.src='/images/placeholder.png'; this.onerror=null;" />
                                        }
                                        else
                                        {
                                            <div class="me-2 d-flex align-items-center justify-content-center bg-light" style="width: 50px; height: 50px; border-radius: 4px;">
                                                <i class="fa fa-image text-muted"></i>
                                            </div>
                                        }
                                        <span>@item.Name</span>
                                    </div>
                                </td>
                                <td>@(item.Category?.CategoryName ?? "N/A")</td>
                                <td>@item.Price.ToString("#,##0") VNĐ</td>
                                <td>
                                    <strong class="@(item.Stock <= 10 ? "text-danger" : "")">@item.Stock</strong>
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ẩn</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Xem chi tiết">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" asp-route-page="@currentPage" class="btn btn-sm btn-warning" title="Chỉnh sửa">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <form asp-action="ToggleActive" asp-route-id="@item.Id" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm @(item.IsActive ? "btn-secondary" : "btn-success")" title="@(item.IsActive ? "Ẩn" : "Hiển thị")">
                                            <i class="fa @(item.IsActive ? "fa-eye-slash" : "fa-eye")"></i>
                                        </button>
                                    </form>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Xóa" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center">
                        Không tìm thấy sản phẩm nào.
                    </div>
                }
                else
                {
                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <p class="text-muted mb-0">Hiển thị <strong>@((currentPage - 1) * pageSize + 1)</strong> - <strong>@Math.Min(currentPage * pageSize, totalItems)</strong> trong tổng số <strong>@totalItems</strong> sản phẩm</p>
                        
                        @if (totalPages > 1)
                        {
                            <nav>
                                <ul class="pagination mb-0">
                                    @if (currentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="?page=@(currentPage - 1)&searchString=@searchString&categoryFilter=@categoryFilter">Trước</a>
                                        </li>
                                    }
                                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link" href="?page=@i&searchString=@searchString&categoryFilter=@categoryFilter">@i</a>
                                        </li>
                                    }
                                    @if (currentPage < totalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="?page=@(currentPage + 1)&searchString=@searchString&categoryFilter=@categoryFilter">Sau</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal thông báo thành công -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="successModalLabel">
                    <i class="fa fa-check-circle"></i> Thành công
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <i class="fa fa-check-circle text-success" style="font-size: 3rem;"></i>
                <p class="mt-3 mb-0" style="font-size: 1.1rem;">@TempData["SuccessMessage"]</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @if (TempData["ShowSuccessModal"] != null && (bool)TempData["ShowSuccessModal"])
    {
        <script>
            $(document).ready(function() {
                $('#successModal').modal('show');
            });
        </script>
    }
}

