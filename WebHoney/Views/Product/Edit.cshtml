@model WebHoney.Models.Product
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Chỉnh sửa sản phẩm</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" name="page" value="@(ViewData["ReturnPage"] ?? 1)" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Tên sản phẩm *</label>
                            <input asp-for="Name" class="form-control" placeholder="Ví dụ: Mật ong rừng nguyên chất" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Danh mục *</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Giá bán (VNĐ) *</label>
                            <input type="text" id="Price" name="Price" class="form-control" value="@Model.Price.ToString("N0")" placeholder="Ví dụ: 200,000" required />
                            <small class="form-text text-muted">Nhập số tiền (có thể dùng dấu phẩy hoặc dấu chấm để phân cách)</small>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Stock" class="form-label">Số lượng tồn kho</label>
                            <input asp-for="Stock" class="form-control" type="number" min="0" placeholder="0" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Origin" class="form-label">Xuất xứ</label>
                            <input asp-for="Origin" class="form-control" placeholder="Ví dụ: Tây Nguyên" />
                            <span asp-validation-for="Origin" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Volume" class="form-label">Dung tích</label>
                            <input asp-for="Volume" class="form-control" type="number" step="0.01" min="0" placeholder="Ví dụ: 500" />
                            <span asp-validation-for="Volume" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Unit" class="form-label">Đơn vị</label>
                            <input asp-for="Unit" class="form-control" placeholder="Ví dụ: ml, kg, lít" />
                            <span asp-validation-for="Unit" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Mô tả sản phẩm</label>
                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Mô tả chi tiết về sản phẩm..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Hình ảnh sản phẩm</label>
                    <div class="card">
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mb-3">
                                    <label class="form-label">Ảnh hiện tại:</label>
                                    <div>
                                        <img src="@Model.ImageUrl" alt="Current image" class="img-thumbnail" style="max-height: 200px;" />
                                    </div>
                                </div>
                            }
                            
                            <div class="mb-3">
                                <label for="imageFile" class="form-label">Upload ảnh mới (để trống nếu giữ ảnh cũ)</label>
                                <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                                <small class="form-text text-muted">Chỉ chấp nhận file ảnh (jpg, jpeg, png, gif, webp). Kích thước tối đa: 5MB</small>
                                <div id="imagePreview" class="mt-2" style="display: none;">
                                    <img id="previewImg" src="" alt="Preview" class="img-thumbnail" style="max-height: 200px;" />
                                </div>
                            </div>
                            <div class="text-center my-2">
                                <strong class="text-muted">HOẶC</strong>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ImageUrl" class="form-label">Nhập URL hình ảnh</label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg hoặc /images/product.jpg" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                <small class="form-text text-muted">Nhập đường dẫn URL của hình ảnh sản phẩm</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label">
                        Kích hoạt sản phẩm (hiển thị trên website)
                    </label>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-times"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('#imageFile').on('change', function(e) {
                var file = e.target.files[0];
                if (file) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#previewImg').attr('src', e.target.result);
                        $('#imagePreview').show();
                    }
                    reader.readAsDataURL(file);
                } else {
                    $('#imagePreview').hide();
                }
            });

            // Format giá tiền khi nhập
            $('#Price').on('input', function() {
                var value = $(this).val().replace(/[^\d]/g, '');
                if (value) {
                    // Format với dấu phẩy phân cách hàng nghìn
                    var formatted = parseInt(value).toLocaleString('vi-VN');
                    $(this).val(formatted);
                }
            });

            // Trước khi submit, chuyển về số nguyên không có dấu phẩy
            $('form').on('submit', function() {
                var priceValue = $('#Price').val().replace(/[^\d]/g, '');
                $('#Price').val(priceValue);
            });
        });
    </script>
}

