<div class="main-banner">
    <div class="owl-carousel owl-banner">
      @if (banners.Any())
      {
          @foreach (var banner in banners)
          {
              var timestamp = banner.UpdatedAt?.ToString("yyyyMMddHHmmss") ?? banner.CreatedAt.ToString("yyyyMMddHHmmss");
              var imageUrlWithCache = $"{banner.ImageUrl}?v={timestamp}";
              <div class="item" style="background-image: url('@imageUrlWithCache');">
                  <div class="header-text">
                      @if (!string.IsNullOrEmpty(banner.Title))
                      {
                          <span class="category">@banner.Title</span>
                      }
                      @if (!string.IsNullOrEmpty(banner.Subtitle))
                      {
                          <h2>@banner.Subtitle</h2>
                      }
                  </div>
              </div>
          }
      }
      else
      {
          <!-- Fallback banners nếu không có banner trong database -->
          <div class="item item-1">
            <div class="header-text">
              <span class="category">Chất lượng cao!</span>
              <h2>Mật ong thiên nhiên tốt nhất cho bạn</h2>
            </div>
          </div>
