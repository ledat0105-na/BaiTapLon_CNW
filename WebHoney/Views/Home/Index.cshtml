                    const lng = position.coords.longitude;
                    
                    // Cập nhật iframe với vị trí mới
                    const newMapUrl = `https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3000!2d${lng}!3d${lat}!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2z${lat}%2C${lng}!5e0!3m2!1sen!2s!4v${Date.now()}!5m2!1sen!2s`;
                    mapFrame.src = newMapUrl;
                    
                    // Hiển thị thông báo thành công
                    locationStatus.style.background = '#d4edda';
                    locationStatus.style.color = '#155724';
                    locationText.innerHTML = `<i class="fa fa-check-circle me-2"></i> Đã tìm thấy vị trí của bạn! (${lat.toFixed(6)}, ${lng.toFixed(6)})`;
                    
                    // Mở Google Maps trong tab mới với vị trí hiện tại
                    const googleMapsUrl = `https://www.google.com/maps?q=${lat},${lng}`;
                    window.open(googleMapsUrl, '_blank');
                    
                    findLocationBtn.disabled = false;
                    findLocationBtn.innerHTML = '<i class="fa fa-map-marker-alt me-2"></i> Tìm vị trí của tôi';
                },
                function(error) {
                    findLocationBtn.disabled = false;
                    findLocationBtn.innerHTML = '<i class="fa fa-map-marker-alt me-2"></i> Tìm vị trí của tôi';
                    
                    let errorMessage = 'Không thể lấy vị trí của bạn. ';
                    switch(error.code) {
                        case error.PERMISSION_DENIED:
                            errorMessage += 'Bạn đã từ chối quyền truy cập vị trí.';
                            break;
                        case error.POSITION_UNAVAILABLE:
                            errorMessage += 'Thông tin vị trí không khả dụng.';
                            break;
                        case error.TIMEOUT:
                            errorMessage += 'Yêu cầu lấy vị trí đã hết thời gian.';
                            break;
                        default:
                            errorMessage += 'Đã xảy ra lỗi không xác định.';
                            break;
                    }
                    
                    locationStatus.style.display = 'block';
                    locationStatus.style.background = '#f8d7da';
                    locationStatus.style.color = '#721c24';
                    locationText.innerHTML = `<i class="fa fa-exclamation-circle me-2"></i> ${errorMessage}`;
                },
                {
                    enableHighAccuracy: true,
                    timeout: 10000,
                    maximumAge: 0
                }
            );
        });
    }
});
</script>
