@{
    ViewData["Title"] = "Contact Us";
}

<div class="page-heading header-text">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <span class="breadcrumb"><a asp-controller="Home" asp-action="Index">Home</a>  /  Contact Us</span>
          <h3>Contact Us</h3>
        </div>
      </div>
    </div>
  </div>

  <div class="contact-page section">
    <div class="container">
      <div class="row">
        <!-- Bên trái: Google Map -->
        <div class="col-lg-6">
          <div class="section-heading" style="margin-bottom: 30px;">
            <h6>| Tìm Chúng Tôi</h6>
            <h2>Vị Trí Cửa Hàng</h2>
          </div>
          <div id="map" style="height: 500px;">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12469.776493332698!2d-80.14036379941481!3d25.907788681148624!2m3!1f357.26927939317244!2f20.870722720054623!3f0!3m2!1i1024!2i768!4f35!3m3!1m2!1s0x88d9add4b4ac788f%3A0xe77469d09480fcdb!2sSunny%20Isles%20Beach!5e1!3m2!1sen!2sth!4v1642869952544!5m2!1sen!2sth" width="100%" height="100%" frameborder="0" style="border:0; border-radius: 10px; box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.15);" allowfullscreen=""></iframe>
          </div>
          <div style="margin-top: 20px;">
            <button type="button" id="find-location-btn" class="orange-button" style="width: 100%;">
              <i class="fa fa-map-marker-alt me-2"></i> Tìm vị trí của tôi
            </button>
          </div>
        </div>

        <!-- Bên phải: Form liên hệ -->
        <div class="col-lg-6">
          <div class="section-heading" style="margin-bottom: 15px;">
            <h6 style="color: #ff6b35; font-weight: 600; letter-spacing: 2px; margin-bottom: 8px; font-size: 14px;">| LIÊN HỆ</h6>
            <h2 style="color: #2c3e50; font-weight: 700; font-size: 32px; margin-bottom: 10px; line-height: 1.3;">Liên Hệ Với Chúng Tôi</h2>
          </div>
          <p style="margin-bottom: 25px; color: #7f8c8d; font-size: 15px; line-height: 1.6;">Chúng tôi luôn sẵn sàng hỗ trợ và tư vấn cho bạn về sản phẩm mật ong</p>
          
          <form id="contact-form" action="" method="post" style="background: #fff; border-radius: 15px; padding: 35px; box-shadow: 0 5px 25px rgba(0,0,0,0.1);">
            <div class="row">
              <div class="col-lg-12">
                <fieldset style="margin-bottom: 20px;">
                  <label for="name" style="display: block; color: #2c3e50; font-weight: 600; margin-bottom: 8px; font-size: 14px;">Họ và Tên *</label>
                  <input type="name" name="name" id="name" placeholder="Nhập họ và tên của bạn..." autocomplete="on" required 
                         style="width: 100%; padding: 12px 18px; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 15px; transition: all 0.3s ease; background: #f8f9fa;"
                         onfocus="this.style.borderColor='#ff6b35'; this.style.background='#fff'; this.style.boxShadow='0 0 0 3px rgba(255,107,53,0.1)'"
                         onblur="this.style.borderColor='#e0e0e0'; this.style.background='#f8f9fa'; this.style.boxShadow='none'">
                </fieldset>
              </div>
              <div class="col-lg-12">
                <fieldset style="margin-bottom: 20px;">
                  <label for="email" style="display: block; color: #2c3e50; font-weight: 600; margin-bottom: 8px; font-size: 14px;">Email *</label>
                  <input type="email" name="email" id="email" placeholder="Nhập email của bạn..." required=""
                         style="width: 100%; padding: 12px 18px; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 15px; transition: all 0.3s ease; background: #f8f9fa;"
                         onfocus="this.style.borderColor='#ff6b35'; this.style.background='#fff'; this.style.boxShadow='0 0 0 3px rgba(255,107,53,0.1)'"
                         onblur="this.style.borderColor='#e0e0e0'; this.style.background='#f8f9fa'; this.style.boxShadow='none'">
                </fieldset>
              </div>
              <div class="col-lg-12">
                <fieldset style="margin-bottom: 20px;">
                  <label for="subject" style="display: block; color: #2c3e50; font-weight: 600; margin-bottom: 8px; font-size: 14px;">Tiêu đề</label>
                  <input type="subject" name="subject" id="subject" placeholder="Nhập tiêu đề (tùy chọn)..." autocomplete="on"
                         style="width: 100%; padding: 12px 18px; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 15px; transition: all 0.3s ease; background: #f8f9fa;"
                         onfocus="this.style.borderColor='#ff6b35'; this.style.background='#fff'; this.style.boxShadow='0 0 0 3px rgba(255,107,53,0.1)'"
                         onblur="this.style.borderColor='#e0e0e0'; this.style.background='#f8f9fa'; this.style.boxShadow='none'">
                </fieldset>
              </div>
              <div class="col-lg-12">
                <fieldset style="margin-bottom: 25px;">
                  <label for="message" style="display: block; color: #2c3e50; font-weight: 600; margin-bottom: 8px; font-size: 14px;">Nội dung tin nhắn *</label>
                  <textarea name="message" id="message" placeholder="Nhập nội dung tin nhắn của bạn..." required
                            style="width: 100%; padding: 12px 18px; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 15px; min-height: 120px; resize: vertical; transition: all 0.3s ease; background: #f8f9fa; font-family: inherit;"
                            onfocus="this.style.borderColor='#ff6b35'; this.style.background='#fff'; this.style.boxShadow='0 0 0 3px rgba(255,107,53,0.1)'"
                            onblur="this.style.borderColor='#e0e0e0'; this.style.background='#f8f9fa'; this.style.boxShadow='none'"></textarea>
                </fieldset>
              </div>
              <div class="col-lg-12">
                <fieldset style="margin-bottom: 0;">
                  <button type="submit" id="form-submit" class="orange-button" 
                          style="width: 100%; padding: 14px 30px; background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%); color: #fff; border: none; border-radius: 10px; font-size: 16px; font-weight: 600; cursor: pointer; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(255,107,53,0.3);"
                          onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 20px rgba(255,107,53,0.4)'"
                          onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 15px rgba(255,107,53,0.3)'">
                    <i class="fa fa-paper-plane me-2"></i> Gửi Tin Nhắn
                  </button>
                </fieldset>
              </div>
            </div>
          </form>

          <!-- Thông tin liên hệ -->
          <div class="row" style="margin-top: 30px;">
            <div class="col-lg-12">
              <div class="item phone" style="background: #fff; border-radius: 12px; padding: 20px; box-shadow: 0 3px 15px rgba(0,0,0,0.08); margin-bottom: 15px; display: flex; align-items: center; transition: transform 0.3s ease;"
                   onmouseover="this.style.transform='translateY(-3px)'" onmouseout="this.style.transform='translateY(0)'">
                <img src="~/assets/images/phone-icon.png" alt="" style="max-width: 48px; margin-right: 15px;">
                <div>
                  <h6 style="margin: 0; color: #2c3e50; font-weight: 700; font-size: 16px;">0833562999</h6>
                  <span style="color: #7f8c8d; font-size: 13px;">Số điện thoại</span>
                </div>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="item email" style="background: #fff; border-radius: 12px; padding: 20px; box-shadow: 0 3px 15px rgba(0,0,0,0.08); display: flex; align-items: center; transition: transform 0.3s ease;"
                   onmouseover="this.style.transform='translateY(-3px)'" onmouseout="this.style.transform='translateY(0)'">
                <img src="~/assets/images/email-icon.png" alt="" style="max-width: 48px; margin-right: 15px;">
                <div>
                  <h6 style="margin: 0; color: #2c3e50; font-weight: 700; font-size: 16px;">tle723772@gmail.com</h6>
                  <span style="color: #7f8c8d; font-size: 13px;">Email liên hệ</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Tìm vị trí của người dùng
    document.getElementById('find-location-btn')?.addEventListener('click', function() {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(function(position) {
          const lat = position.coords.latitude;
          const lng = position.coords.longitude;
          const newMapUrl = `https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.184133388661!2d${lng}!3d${lat}!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzDCsDI3JzAwLjAiTiA3M8KwMjcnMDAuMCJF!5e0!3m2!1sen!2s!4v1234567890!5m2!1sen!2s&q=${lat},${lng}`;
          document.querySelector('#map iframe').src = newMapUrl;
        }, function(error) {
          alert('Không thể lấy vị trí của bạn. Vui lòng kiểm tra quyền truy cập vị trí.');
        });
      } else {
        alert('Trình duyệt của bạn không hỗ trợ định vị địa lý.');
      }
    });
  </script>

