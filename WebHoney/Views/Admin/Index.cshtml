@{
    ViewData["Title"] = "Dashboard - Trang quản trị";
    var ordersToday = (int)ViewData["OrdersToday"]!;
    var revenueToday = (decimal)ViewData["RevenueToday"]!;
    var lowStockProducts = (List<WebHoney.Models.Product>)ViewData["LowStockProducts"]!;
    var pendingOrders = (int)ViewData["PendingOrders"]!;
    var revenueThisMonth = (decimal)ViewData["RevenueThisMonth"]!;
    var totalOrders = (int)ViewData["TotalOrders"]!;
    var totalCustomers = (int)ViewData["TotalCustomers"]!;
    var totalProducts = (int)ViewData["TotalProducts"]!;
    var shippingOrders = (int)ViewData["ShippingOrders"]!;
    var canceledOrders = (int)ViewData["CanceledOrders"]!;
    var topProducts = (List<WebHoney.Models.ViewModels.TopProductViewModel>)ViewData["TopProducts"]!;
}

<div class="container-fluid">
    <!-- Thống kê tổng quan -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Đơn hoàn thành hôm nay</div>
                <div class="card-body">
                    <h2 class="card-title">@ordersToday</h2>
                    <p class="card-text">đơn hàng</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Doanh thu hôm nay (đơn hoàn thành)</div>
                <div class="card-body">
                    <h2 class="card-title">@revenueToday.ToString("N0")</h2>
                    <p class="card-text">VNĐ</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">Đơn hàng đang xử lý</div>
                <div class="card-body">
                    <h2 class="card-title">@pendingOrders</h2>
                    <p class="card-text">đơn hàng</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">Đơn đang giao (SHIPPING)</div>
                <div class="card-body">
                    <h2 class="card-title">@shippingOrders</h2>
                    <p class="card-text">đơn hàng</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-header">Đơn đã hủy</div>
                <div class="card-body">
                    <h2 class="card-title">@canceledOrders</h2>
                    <p class="card-text">đơn hàng</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">Doanh thu tháng này</div>
                <div class="card-body">
                    <h2 class="card-title">@revenueThisMonth.ToString("N0")</h2>
                    <p class="card-text">VNĐ</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Top sản phẩm bán chạy -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Top sản phẩm bán chạy (theo số lượng trong đơn COMPLETED)</h5>
                </div>
                <div class="card-body">
                    @if (topProducts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Mã SP</th>
                                        <th>Tên sản phẩm</th>
                                        <th class="text-end">Số lượng đã bán</th>
                                        <th class="text-end">Doanh thu</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ var rank = 1; }
                                    @foreach (var p in topProducts)
                                    {
                                        <tr>
                                            <td>@rank</td>
                                            <td>@p.ProductId</td>
                                            <td>@p.ProductName</td>
                                            <td class="text-end">@p.TotalQuantity</td>
                                            <td class="text-end">@p.TotalRevenue.ToString("#,##0") VNĐ</td>
                                        </tr>
                                        rank++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có dữ liệu bán hàng.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê tổng số -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-secondary mb-3">
                <div class="card-header">Tổng số đơn hàng</div>
                <div class="card-body">
                    <h2 class="card-title">@totalOrders</h2>
                    <p class="card-text">đơn hàng</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-dark mb-3">
                <div class="card-header">Tổng khách hàng</div>
                <div class="card-body">
                    <h2 class="card-title">@totalCustomers</h2>
                    <p class="card-text">khách hàng</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Tổng sản phẩm đang bán</div>
                <div class="card-body">
                    <h2 class="card-title">@totalProducts</h2>
                    <p class="card-text">sản phẩm</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sản phẩm sắp hết -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Sản phẩm sắp hết hàng (≤ 10 sản phẩm)</h5>
                </div>
                <div class="card-body">
                    @if (lowStockProducts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã SP</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Danh mục</th>
                                        <th>Tồn kho</th>
                                        <th>Giá</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in lowStockProducts)
                                    {
                                        <tr class="@(product.Stock <= 5 ? "table-danger" : "table-warning")">
                                            <td>@product.ProductId</td>
                                            <td>@product.ProductName</td>
                                            <td>@(product.Category?.CategoryName ?? "N/A")</td>
                                            <td><strong>@product.Stock</strong></td>
                                            <td>@product.Price.ToString("#,##0") VNĐ</td>
                                            <td>
                                                @if (product.Stock <= 5)
                                                {
                                                    <span class="badge bg-danger">Sắp hết</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Còn ít</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Không có sản phẩm nào sắp hết hàng.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
