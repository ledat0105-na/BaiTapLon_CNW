@model WebHoney.Models.AccountProfileViewModel
@{
    ViewData["Title"] = "Tài khoản của tôi";
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="breadcrumb"><a asp-controller="Home" asp-action="Index">Trang chủ</a> / Tài khoản của tôi</span>
                <h3>Trang cá nhân</h3>
            </div>
        </div>
    </div>
</div>

<div class="section best-deal">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Thông tin cá nhân</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Tên đăng nhập:</strong> @Model.User.Username</p>
                        <p><strong>Họ và tên:</strong> @Model.User.FullName</p>
                        <p><strong>Email:</strong> @Model.User.Email</p>
                        <p><strong>Số điện thoại:</strong> @Model.User.Phone</p>
                        <p><strong>Ngày tạo:</strong> @Model.User.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        <p class="text-muted small mb-0">(Hiện tại trang này chỉ cho phép xem thông tin. Nếu bạn muốn, mình có thể thêm chức năng chỉnh sửa thông tin sau.)</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Lịch sử đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        @if (!Model.Orders.Any())
                        {
                            <p>Bạn chưa có đơn hàng nào.</p>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th>Mã đơn</th>
                                            <th>Ngày đặt</th>
                                            <th>Trạng thái</th>
                                            <th class="text-end">Tổng tiền</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in Model.Orders)
                                        {
                                            <tr>
                                                <td>#@order.Id</td>
                                                <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>@order.Status</td>
                                                <td class="text-end">@order.TotalAmount.ToString("#,##0") VNĐ</td>
                                                <td class="text-center">
                                                    <a asp-controller="Cart" asp-action="MyOrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                                        Xem chi tiết
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
