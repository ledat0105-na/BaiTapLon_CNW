@model WebHoney.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="breadcrumb"><a asp-controller="Home" asp-action="Index">Trang chủ</a> / Đăng nhập</span>
                <h3>Đăng nhập</h3>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/assets/css/user-pages.css" />

<div class="auth-container">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="auth-card">
                    <div class="auth-header">
                        <h6>| Đăng nhập</h6>
                        <h2>Đăng nhập vào tài khoản</h2>
                    </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @{
                    var isAccountLocked = (TempData["AccountLocked"] != null && TempData["AccountLocked"] is bool accountLockedTemp && accountLockedTemp) || 
                                         (ViewData["AccountLocked"] != null && ViewData["AccountLocked"] is bool accountLockedView && accountLockedView);
                    var lockReason = TempData["LockReason"] as string ?? ViewData["LockReason"] as string;
                }
                
                @if (isAccountLocked)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Tài khoản của bạn đã bị khóa!</strong><br />
                        @if (!string.IsNullOrEmpty(lockReason))
                        {
                            <span>Lý do: @lockReason</span>
                        }
                        <br />
                        <small>Vui lòng liên hệ admin để được hỗ trợ mở khóa tài khoản.</small>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                    <form asp-action="Login" method="post" class="auth-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="mb-3">
                            <label asp-for="UsernameOrEmail" class="form-label">
                                <i class="fa fa-user"></i> Email hoặc tên đăng nhập
                            </label>
                            <input asp-for="UsernameOrEmail" class="form-control" placeholder="Nhập email hoặc tên đăng nhập" />
                            <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="fa fa-lock"></i> Mật khẩu
                            </label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="orange-button">
                                <i class="fa fa-sign-in me-2"></i>Đăng nhập
                            </button>
                        </div>

                        <div class="text-center">
                            <p>Chưa có tài khoản? <a asp-action="Register" class="auth-link">Đăng ký ngay</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    @{
        var showModal = (TempData["AccountLocked"] != null && TempData["AccountLocked"] is bool accountLockedTemp2 && accountLockedTemp2) || 
                        (ViewData["AccountLocked"] != null && ViewData["AccountLocked"] is bool accountLockedView2 && accountLockedView2);
    }
    
    @if (showModal)
    {
        <script>
            $(document).ready(function() {
                // Hiển thị modal thông báo tài khoản bị khóa
                $('#accountLockedModal').modal('show');
            });
        </script>
    }
}

<!-- Modal thông báo tài khoản bị khóa -->
<div class="modal fade" id="accountLockedModal" tabindex="-1" aria-labelledby="accountLockedModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="accountLockedModalLabel">
                    <i class="fas fa-lock"></i> Tài khoản đã bị khóa
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger mb-3">
                    <strong>Tài khoản của bạn đã bị khóa!</strong>
                </div>
                @if (!string.IsNullOrEmpty(lockReason))
                {
                    <div class="mb-3">
                        <strong>Lý do khóa:</strong>
                        <p class="text-muted mt-2">@lockReason</p>
                    </div>
                }
                <div class="alert alert-info mb-0">
                    <i class="fas fa-info-circle"></i> 
                    Vui lòng liên hệ với quản trị viên để được hỗ trợ mở khóa tài khoản.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

