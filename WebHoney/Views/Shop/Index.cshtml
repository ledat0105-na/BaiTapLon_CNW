@model List<WebHoney.Models.Product>
@{
    ViewData["Title"] = "Sản phẩm mật ong";
    var categories = (List<WebHoney.Models.Category>)ViewData["Categories"] ?? new List<WebHoney.Models.Category>();
    var search = ViewData["Search"]?.ToString();
    var categoryId = ViewData["CategoryId"] as long?;
    var sortBy = ViewData["SortBy"]?.ToString() ?? "";
    var page = (int)ViewData["Page"]!;
    var pageSize = (int)ViewData["PageSize"]!;
    var totalItems = (int)ViewData["TotalItems"]!;
    var totalPages = (int)ViewData["TotalPages"]!;
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="breadcrumb"><a asp-controller="Home" asp-action="Index">Trang chủ</a> / Sản phẩm</span>
                <h3>Sản phẩm mật ong</h3>
            </div>
        </div>
    </div>
</div>

<div class="section best-deal">
    <div class="container">
        <div class="row">
            <!-- Sidebar: Filter -->
            <div class="col-lg-3">
                <div class="filter-form">
                    <h4>Bộ lọc</h4>
                    <form method="get" asp-controller="Shop" asp-action="Index">
                        <input type="hidden" name="page" value="1" />
                        
                        <!-- Tìm kiếm -->
                        <div class="mb-3">
                            <label class="form-label">Tìm kiếm</label>
                            <input type="text" name="search" class="form-control" value="@search" placeholder="Nhập tên sản phẩm...">
                        </div>

                        <!-- Danh mục -->
                        <div class="mb-3">
                            <label class="form-label">Danh mục</label>
                            <select name="categoryId" class="form-select" onchange="this.form.submit()">
                                <option value="">Tất cả danh mục</option>
                                @foreach (var category in categories)
                                {
                                    <option value="@category.Id" selected="@(categoryId == category.Id)">@category.Name</option>
                                }
                            </select>
                        </div>

                        <!-- Sắp xếp -->
                        <div class="mb-3">
                            <label class="form-label">Sắp xếp</label>
                            <select name="sortBy" class="form-select" onchange="this.form.submit()">
                                <option value="">Mới nhất</option>
                                <option value="price_asc" selected="@(sortBy == "price_asc")">Giá: Tăng dần</option>
                                <option value="price_desc" selected="@(sortBy == "price_desc")">Giá: Giảm dần</option>
                                <option value="name_asc" selected="@(sortBy == "name_asc")">Tên: A-Z</option>
                                <option value="name_desc" selected="@(sortBy == "name_desc")">Tên: Z-A</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
                    </form>
                </div>
            </div>

            <!-- Main Content: Products -->
            <div class="col-lg-9">
                @if (Model.Any())
                {
                    <div class="row">
                        @foreach (var product in Model)
                        {
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="item">
                                    <a href="@Url.Action("Details", "Shop", new { id = product.Id })">
                                        <img src="@(product.ImageUrl ?? "/assets/images/property-01.jpg")" alt="@product.Name" style="width: 100%; height: 250px; object-fit: cover;" onerror="this.onerror=null; this.src='/assets/images/property-01.jpg';">
                                    </a>
                                    <span class="category">@product.Category?.Name</span>
                                    <h6><a href="@Url.Action("Details", "Shop", new { id = product.Id })">@product.Name</a></h6>
                                    <span class="price">@product.Price.ToString("#,##0") VNĐ</span>
                                    @if (product.Volume.HasValue)
                                    {
                                        <span class="volume">@product.Volume @product.Unit</span>
                                    }
                                    <div class="main-button">
                                        <a href="@Url.Action("Details", "Shop", new { id = product.Id })">Xem chi tiết</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Pagination Info -->
                    <div class="row mt-4 mb-3">
                        <div class="col-12 text-center">
                            <p class="text-muted mb-0">
                                Hiển thị <strong>@((page - 1) * pageSize + 1)</strong> - <strong>@(Math.Min(page * pageSize, totalItems))</strong> 
                                trong tổng số <strong>@totalItems</strong> sản phẩm
                            </p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <h4>Không tìm thấy sản phẩm</h4>
                        <p>Không có sản phẩm nào phù hợp với bộ lọc của bạn. Vui lòng thử lại với bộ lọc khác.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

