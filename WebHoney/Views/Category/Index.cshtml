@model IEnumerable<WebHoney.Models.Category>
@{
    ViewData["Title"] = "Quản lý danh mục";
    var currentPage = (int)(ViewData["CurrentPage"] ?? 1);
    var totalPages = (int)(ViewData["TotalPages"] ?? 1);
    var totalItems = (int)(ViewData["TotalItems"] ?? 0);
    var pageSize = (int)(ViewData["PageSize"] ?? 5);
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Quản lý danh mục sản phẩm</h4>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i> Thêm danh mục mới
        </a>
    </div>

    <!-- Danh sách danh mục -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Mã DM</th>
                            <th>Tên danh mục</th>
                            <th>Mô tả</th>
                            <th>Số sản phẩm</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(!item.IsActive ? "table-secondary" : "")">
                                <td>@item.CategoryId</td>
                                <td>@item.Name</td>
                                <td>@(item.Description ?? "-")</td>
                                <td>@item.Products.Count</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ẩn</span>
                                    }
                                </td>
                                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Xem chi tiết">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Chỉnh sửa">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <form asp-action="ToggleActive" asp-route-id="@item.Id" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm @(item.IsActive ? "btn-secondary" : "btn-success")" title="@(item.IsActive ? "Ẩn" : "Hiển thị")">
                                            <i class="fa @(item.IsActive ? "fa-eye-slash" : "fa-eye")"></i>
                                        </button>
                                    </form>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Xóa" onclick="return confirm('Bạn có chắc muốn xóa danh mục này?');">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center">
                        Không có danh mục nào.
                    </div>
                }
                else
                {
                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <p class="text-muted mb-0">Hiển thị <strong>@((currentPage - 1) * pageSize + 1)</strong> - <strong>@Math.Min(currentPage * pageSize, totalItems)</strong> trong tổng số <strong>@totalItems</strong> danh mục</p>
                        
                        @if (totalPages > 1)
                        {
                            <nav>
                                <ul class="pagination mb-0">
                                    @if (currentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="?page=@(currentPage - 1)">Trước</a>
                                        </li>
                                    }
                                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link" href="?page=@i">@i</a>
                                        </li>
                                    }
                                    @if (currentPage < totalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="?page=@(currentPage + 1)">Sau</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

