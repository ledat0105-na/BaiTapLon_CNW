@model WebHoney.Models.BannerImage
@{
    ViewData["Title"] = "Thêm banner mới";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Thêm banner mới</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label for="imageFile" class="form-label">Ảnh banner (upload file)</label>
                    <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                    <small class="form-text text-muted">Chỉ chấp nhận file ảnh (jpg, jpeg, png, gif, webp). Kích thước tối đa: 5MB</small>
                    @if (ViewData.ModelState["ImageFile"]?.Errors?.Count > 0)
                    {
                        <span class="text-danger">@ViewData.ModelState["ImageFile"].Errors[0].ErrorMessage</span>
                    }
                </div>

                <div class="text-center my-2">
                    <strong class="text-muted">HOẶC</strong>
                </div>

                <div class="mb-3">
                    <label for="imageUrlInput" class="form-label">Nhập URL hình ảnh</label>
                    <input type="text" id="imageUrlInput" name="imageUrl" class="form-control" placeholder="https://example.com/image.jpg hoặc /assets/images/banner-01.jpg" />
                    <small class="form-text text-muted">Nhập đường dẫn URL của hình ảnh. Nếu nhập URL, ảnh upload sẽ được bỏ qua.</small>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Tiêu đề</label>
                    <input asp-for="Title" class="form-control" placeholder="Ví dụ: Mật ong thiên nhiên tốt nhất" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Subtitle" class="form-label">Phụ đề</label>
                    <input asp-for="Subtitle" class="form-control" placeholder="Ví dụ: Chất lượng cao, nguyên chất 100%" />
                    <span asp-validation-for="Subtitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DisplayOrder" class="form-label">Thứ tự hiển thị</label>
                    <input asp-for="DisplayOrder" type="number" class="form-control" value="0" min="0" />
                    <small class="form-text text-muted">Số càng nhỏ càng hiển thị trước. Để 0 để tự động thêm vào cuối.</small>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" checked />
                    <label asp-for="IsActive" class="form-check-label">Hiển thị banner</label>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-times"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Preview ảnh trước khi upload
        document.getElementById('imageFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    // Tạo hoặc cập nhật preview
                    let preview = document.getElementById('image-preview');
                    if (!preview) {
                        preview = document.createElement('img');
                        preview.id = 'image-preview';
                        preview.className = 'img-thumbnail mt-2';
                        preview.style.maxWidth = '100%';
                        preview.style.height = '200px';
                        preview.style.objectFit = 'cover';
                        document.getElementById('imageFile').parentElement.appendChild(preview);
                    }
                    preview.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        // Preview ảnh từ URL
        const urlInput = document.getElementById('imageUrlInput');
        if (urlInput) {
            urlInput.addEventListener('change', function () {
                const url = urlInput.value.trim();
                if (!url) return;

                let preview = document.getElementById('image-preview');
                if (!preview) {
                    preview = document.createElement('img');
                    preview.id = 'image-preview';
                    preview.className = 'img-thumbnail mt-2';
                    preview.style.maxWidth = '100%';
                    preview.style.height = '200px';
                    preview.style.objectFit = 'cover';
                    urlInput.parentElement.appendChild(preview);
                }
                preview.src = url;
            });
        }
    </script>
}

