@model WebHoney.Models.FeaturedProduct
@{
    ViewData["Title"] = "Thêm sản phẩm nổi bật";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Thêm sản phẩm nổi bật</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label for="productId" class="form-label">Chọn sản phẩm (tùy chọn)</label>
                    <select name="productId" id="productId" class="form-select">
                        <option value="">-- Không chọn sản phẩm --</option>
                        @foreach (var product in ViewBag.Products as SelectList)
                        {
                            <option value="@product.Value">@product.Text</option>
                        }
                    </select>
                    <small class="form-text text-muted">Nếu chọn sản phẩm, thông tin sản phẩm sẽ được hiển thị tự động</small>
                </div>

                <div class="mb-3">
                    <label class="form-label">Hình ảnh</label>
                    <div class="card">
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="imageFile" class="form-label">Upload ảnh</label>
                                <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                                <small class="form-text text-muted">Chỉ chấp nhận file ảnh (jpg, jpeg, png, gif, webp). Kích thước tối đa: 5MB</small>
                                <div id="imagePreview" class="mt-2" style="display: none;">
                                    <label class="form-label">Ảnh xem trước:</label>
                                    <img id="previewImg" src="" alt="Preview" class="img-thumbnail" style="max-width: 100%; height: 300px; object-fit: cover;" />
                                </div>
                            </div>
                            <div class="text-center my-2">
                                <strong class="text-muted">HOẶC</strong>
                            </div>
                            <div class="mb-3">
                                <label for="imageUrl" class="form-label">Nhập URL hình ảnh</label>
                                <input type="text" name="imageUrl" id="imageUrl" class="form-control" placeholder="https://example.com/image.jpg hoặc /images/product.jpg" />
                                <small class="form-text text-muted">Nhập đường dẫn URL của hình ảnh</small>
                                <button type="button" id="previewUrlBtn" class="btn btn-sm btn-info mt-2">
                                    <i class="fa fa-eye"></i> Xem trước URL
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Tiêu đề</label>
                    <input asp-for="Title" class="form-control" placeholder="Ví dụ: Mật ong thiên nhiên tốt nhất" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Subtitle" class="form-label">Phụ đề</label>
                    <input asp-for="Subtitle" class="form-control" placeholder="Ví dụ: Chất lượng cao, nguyên chất 100%" />
                    <span asp-validation-for="Subtitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả về sản phẩm nổi bật"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DisplayOrder" class="form-label">Thứ tự hiển thị</label>
                    <input asp-for="DisplayOrder" type="number" class="form-control" value="0" min="0" />
                    <small class="form-text text-muted">Số càng nhỏ càng hiển thị trước. Để 0 để tự động thêm vào cuối.</small>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" checked />
                    <label asp-for="IsActive" class="form-check-label">Hiển thị trên trang chủ</label>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-times"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Preview ảnh khi chọn file
        document.getElementById('imageFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('previewImg');
                    const previewDiv = document.getElementById('imagePreview');
                    if (preview && previewDiv) {
                        preview.src = e.target.result;
                        previewDiv.style.display = 'block';
                    }
                };
                reader.readAsDataURL(file);
            } else {
                document.getElementById('imagePreview').style.display = 'none';
            }
        });

        // Preview ảnh từ URL
        document.getElementById('previewUrlBtn').addEventListener('click', function() {
            const url = document.getElementById('imageUrl').value.trim();
            if (url) {
                const preview = document.getElementById('previewImg');
                const previewDiv = document.getElementById('imagePreview');
                if (preview && previewDiv) {
                    preview.src = url;
                    previewDiv.style.display = 'block';
                    preview.onerror = function() {
                        alert('Không thể tải ảnh từ URL này. Vui lòng kiểm tra lại đường dẫn.');
                    };
                }
            } else {
                alert('Vui lòng nhập URL hình ảnh.');
            }
        });
    </script>
}

