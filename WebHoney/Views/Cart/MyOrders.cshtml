@model List<WebHoney.Models.Order>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="breadcrumb"><a asp-controller="Home" asp-action="Index">Trang chủ</a> / Đơn hàng của tôi</span>
                <h3>Đơn hàng của tôi</h3>
            </div>
        </div>
    </div>
</div>

<div class="section best-deal">
    <div class="container">
        @if (!Model.Any())
        {
            <p>Bạn chưa có đơn hàng nào.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead>
                        <tr>
                            <th>Mã đơn</th>
                            <th>Ngày đặt</th>
                            <th>Trạng thái</th>
                            <th class="text-end">Tổng tiền</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>#@order.Id</td>
                                <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@order.Status</td>
                                <td class="text-end">@order.TotalAmount.ToString("#,##0") VNĐ</td>
                                <td class="text-center">
                                    <a asp-action="MyOrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                        Xem chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
